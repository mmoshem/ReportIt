@inherits LayoutComponentBase

<div class="page bg-light min-vh-100">
    <main class="container py-4">
        <div class="row justify-content-center">
                <h1 class="display-4 text-center text-primary fw-bold mb-4">Report It</h1>
                <div class="card shadow-sm">
                    <div class="card-body">
                        @Body
                    </div>
                </div>
            
        </div>
    </main>

    <div id="blazor-error-ui" class="alert alert-danger" role="alert" style="display: none;">
        <div class="container d-flex justify-content-between align-items-center">
            <div>
                <i class="bi bi-exclamation-triangle-fill me-2"></i>
                An unhandled error has occurred.
                <a href="" class="reload alert-link ms-2">Reload</a>
            </div>
            <button type="button" class="btn-close dismiss" aria-label="Close"></button>
        </div>
    </div>
</div>